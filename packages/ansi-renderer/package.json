{
  "name": "@pantomime/ansi-renderer",
  "version": "0.0.1",
  "description": "ANSI renderer for pantomime",
  "author": "Sven Johansson",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "keywords": [
    "ANSI",
    "graphics",
    "terminal",
    "tui",
    "console"
  ],
  "scripts": {
    "build": "tsup",
    "demo:bounce": "tsx demo/bounce.ts",
    "demo:lava": "tsx demo/lava.ts",
    "demo:rotate-polygon": "tsx demo/rotate-polygon.ts",
    "demo:rotate-sprite": "tsx demo/rotate-sprite.ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@pantomime/core": "^0.0.1",
    "@pantomime/math": "^0.0.1",
    "@pantomime/raster": "^0.0.1",
    "@pantomime/vector": "^0.0.1"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3"
  },
  "devDependencies": {
    "@pantomime/core": "^0.0.1",
    "@pantomime/math": "^0.0.1",
    "@pantomime/raster": "^0.0.1",
    "@pantomime/vector": "^0.0.1"
  }
}
